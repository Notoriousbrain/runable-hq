generator client {
  provider = "prisma-client-js"
  output   = "./src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Component {
  id         String   @id @default(cuid())
  name       String   @default("Untitled Component")
  sourceCode String   @db.Text
  props      Json     @default("{}")
  rev        Int      @default(1)
  schemaVer  Int      @default(1)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([updatedAt])
}

model ComponentVersion {
  id          String   @id @default(cuid())
  componentId String
  rev         Int
  sourceCode  String   @db.Text
  props       Json
  createdAt   DateTime @default(now())

  @@index([componentId, rev], map: "component_rev_idx")
}
